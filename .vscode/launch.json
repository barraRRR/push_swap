{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Manual",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/push_swap", // <--- La ruta a tu ejecutable
            "args": [0 1 2 3],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb", // O 'lldb' si estÃ¡s en Mac
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}